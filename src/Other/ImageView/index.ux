<template>

    <stack>

        <tabs index="{{imageIndex}}">
            <tab-content >
                <block for="img in images">
                    <div >
                                <div class="view-image">

                                    <image src="{{img}}" alt="\Res\ic_loading_image.png"></image>
                                </div>
                    </div>
                </block>
            </tab-content>
        </tabs>
        <div class="imageview-tool-bar">
            <image @click="onEvent({type:type})" src="{{toolSrc}}" ></image>
        </div>
    </stack>

</template>

<style lang="less">

    stack{

          flex-direction: column;
          height: 100%;
          align-items: center;
          justify-content:center;
        list{
            /* height: 100%; */
            background-color: #222;
            align-items: center;
            justify-content: center;
            flex-direction: column;

        }


                    .view-image{
                        width: 100%;

                            justify-content: center;
                            align-items: center;
                            background-color: #222222;
                        image{
                            background-color: #222222;
                            width: 100%;
                            resize-mode:cover;
                        }
                    }


        .imageview-tool-bar{
            height: 108px;
            width: 100%;
            padding: 8px;
            flex-direction: row;
            justify-content: flex-end;


            image{
                width: 96px;
                height: 96px;
                border-radius: 16px;
            }
        }
