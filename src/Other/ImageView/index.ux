</style>
<script>

    import prompt from '@system.prompt'
    import router from '@system.router'

    export default {
        protected :{
            src : "",
            type:"view",
            toolSrc:"",
            images:[],
            imageIndex:0
        }
        ,onShow(){
            $umeng_stat.resume(this)
        }
        ,onHide() {
            $umeng_stat.pause(this)
        }
        ,onInit(){

            console.info(this.images)
            this.images = JSON.parse(this.images)
            console.info(this.images)
            for(var x in this.images){
                if(this.images[x] == this.src)
                {
                    console.info(x)
                    this.imageIndex = x
                }
            }
            if(this.type == 'view-upload'){
                this.toolSrc = "/Res/ic_delete.png"
            }
        }
        ,onEvent(e){
            if(e.type == "view-upload"){
                prompt.showDialog({
                  message: '确定删除该图片吗',
                  buttons: [
                      {
                        text: '确定',
                        color: '#00bcd4'
                    },{
                        text: '不了',
                        color: '#efefef'
                      }
                  ],
                  success: function (data) {
                      this.$app.$data.dataImageView = {
                         gotoPage: 'image-pick-bar',
                         params: {
                           uri: this.src
                         }
                       }
                      this.$page.finish()
                  }.bind(this)
                })
            }

            if(e.type == 'long-press-image'){
                // router.push({
                //     uri:"Other/Web",
                //     params:{
                //         baseUrl:e.data
                //     }
                // })
            }
        }
    }

</script>
