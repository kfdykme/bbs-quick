                          }


                          .header{
                                flex-direction: row;
                                margin-top: 16px;
                                padding: 16px;

                                .avatar{
                                  width: 64px;
                                  height :64px;
                                  margin: 8px;
                                  border-radius: 32px;
                                }

                                .header-text{
                                    flex-direction: column;

                                    div{
                                        flex-direction: row;
                                    }
                                }



