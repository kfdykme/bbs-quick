<script>
import FormApi from '../Common/FormApi'
import prompt from '@system.prompt'
import router from '@system.router'
import DateUtil from  '../Common/DateUtil'

export default{
  props:[
    'datalist',
    'tag'
  ],
  data:{
    list:[],
    page:1,
    canLoadMore :true,
    isRefreshing :false
  },
  onInit(){

    this.refresh()

  },
  dore(e){
    this.isRefreshing =e.refreshing
    this.refresh()
  },
  refresh(){
    this.page = 1
    this.fetchPosts(this.tag,this.page)
  },
  goToTop(){

  },
  renderMore(list){
    if(list != null && list.length != 0){

      this.list = this.list.concat(list);
    } else {
        this.renderError("没有更多了~~")
    }
    this.loadMoreComplete()
  },
  render(list){
    if(list != null && list.length!=0){
      this.list = list

      this.refreshComplete()
    } else {
      this.renderError("没有更多了~~")
    }

  },
  renderError(msg){
    console.error(msg)
  },
  loadMoreComplete(){
    this.canLoadMore = true
    console.log("loadMoreComplete");

  },
  refreshComplete(){
    console.log("refreshComplete");
    if(this.isRefreshing){
      this.isRefreshing = false

      prompt.showToast({
          message: 'refresh complete'
      })
    }

  },
  fetchPosts(tag,page){
    console.log("fetpost page : "+page);
    FormApi.getPostByTag(tag,page,
      function (data){
        const re = JSON.parse(data.data)

        let x
        for(x in re.list){
          let time = re.list[x].last_reply_date
          re.list[x].last_reply_date = DateUtil.convertTime(time)
        }

        if(page == 1){
          this.render(re.list)
        } else {

          console.log(JSON.stringify(re.list));
          this.renderMore(re.list)
        }


      }.bind(this),
      function(data,code){
        //this.refreshComplete();
      })
  },
  loadMore(){
    if(this.canLoadMore){
      this.canLoadMore = false
      this.page = this.page+ 1
      this.fetchPosts(this.tag,this.page)

    }
  },
  onClickPost(a){
    console.log("click : " + a.target.attr.topicid);

    router.push({
      uri : 'Post/Detail',
      params : {
        topicid : a.target.attr.topicid
      }
    })

  }
}

</script>
